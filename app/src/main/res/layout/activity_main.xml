<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="title" type="String"/>
    </data>

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.MainActivity" android:background="@color/colorBackground">
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/songList"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:background="@color/colorBackground"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.75"/>
        <TextClock
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="30sp" android:textColor="@android:color/white" android:id="@+id/textClock"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btnPlay"
                app:layout_constraintVertical_chainStyle="spread_inside"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/ic_play"
                android:id="@+id/btnPlay" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textClock"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btnShuffle"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_next"
                android:id="@+id/btnNext"
                app:layout_constraintTop_toBottomOf="@+id/btnPlay" app:layout_constraintStart_toStartOf="@+id/btnPlay"
                app:layout_constraintEnd_toEndOf="@+id/btnPlay"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_previous"
                android:id="@+id/btnPrevious"
                app:layout_constraintBottom_toTopOf="@+id/btnPlay" app:layout_constraintStart_toStartOf="@+id/btnPlay"
                app:layout_constraintEnd_toEndOf="@+id/btnPlay"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_shuffle"
                android:id="@+id/btnShuffle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPlay" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

        <com.airbnb.lottie.LottieAnimationView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/animationContainer"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:background="@color/colorBackground"
                app:lottie_fileName="animation-music-1.json"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/guideline"/>
        <TextView
                android:text="Playing Now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playingNowTxt"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
        <TextView
                android:text="@{title}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/songTitle" app:layout_constraintStart_toStartOf="@+id/playingNowTxt"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
                tools:text="Titulo de la Cancion"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/white"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/playingNowTxt" android:visibility="visible"/>
        <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/screensaver"
                                          app:constraint_referenced_ids="animationContainer,songTitle,playingNowTxt"/>


    </android.support.constraint.ConstraintLayout>
</layout>
