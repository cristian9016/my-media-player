<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="title" type="String"/>
    </data>

    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.MainActivity" android:background="@color/colorBackground"
            android:id="@+id/videoContainer">
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/videoList"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:background="@color/colorBackground" tools:listitem="@layout/template_song"
                app:layout_constraintTop_toBottomOf="@+id/etSearch"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.75"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/btn_play"
                android:id="@+id/btnPlay" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btnShuffle"
                app:layout_constraintTop_toBottomOf="@+id/swMusic"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/btn_next"
                android:id="@+id/btnNext"
                app:layout_constraintTop_toBottomOf="@+id/btnPlay" app:layout_constraintStart_toStartOf="@+id/btnPlay"
                app:layout_constraintEnd_toEndOf="@+id/btnPlay"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/btn_prev"
                android:id="@+id/btnPrevious"
                app:layout_constraintBottom_toTopOf="@+id/btnPlay" app:layout_constraintStart_toStartOf="@+id/btnPlay"
                app:layout_constraintEnd_toEndOf="@+id/btnPlay"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_shuffle"
                android:id="@+id/btnShuffle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/btnPlay"/>

        <!--<fragment-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:name="com.cristiandev.mymusicplayer.keyboard.KeyboardFragment"-->
        <!--android:id="@+id/keyboardFragment"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent" tools:layout="@layout/fragment_keyboard"/>-->
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:text="Buscar en Video"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/textview_background" android:textColor="@android:color/white"
                android:gravity="center_vertical" android:paddingLeft="8dp" android:textSize="24dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etSearch" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/textview_background" android:textColor="@android:color/white"
                android:gravity="center_vertical" android:paddingLeft="8dp" android:textSize="24dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_search"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/etSearch" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/etSearch"
                app:layout_constraintTop_toTopOf="@+id/etSearch"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/ic_music"
                android:id="@+id/swMusic" app:layout_constraintEnd_toEndOf="@+id/btnPlay"
                app:layout_constraintStart_toStartOf="@+id/btnPlay" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btnPlay"
                app:layout_constraintVertical_chainStyle="spread_inside"/>
        <TextView
                android:text="MUSICA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/swMusic"
                app:layout_constraintStart_toStartOf="@+id/swMusic"
                app:layout_constraintEnd_toEndOf="@+id/swMusic" android:textColor="@android:color/white"/>
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp" android:name="com.cristiandev.mymusicplayer.video.VideoFragment"
                android:id="@+id/fragmentVideo" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline"
                tools:layout="@layout/fragment_video"/>


    </android.support.constraint.ConstraintLayout>
</layout>
